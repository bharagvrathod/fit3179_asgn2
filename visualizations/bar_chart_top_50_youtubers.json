{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A nested bar chart example, with bars grouped by category.",
    "width": 800,
    "background": "#e9ecef",
    "padding": 5,
    "autosize": "pad",
  
    "signals": [
      {
        "name": "rangeStep", "value": 25
      },
      {
        "name": "innerPadding", "value": 0.1,
        "bind": {"input": "range", "min": 0, "max": 0.7, "step": 0.01}
      },
      {
        "name": "outerPadding", "value": 0.2,
        "bind": {"input": "range", "min": 0, "max": 0.4, "step": 0.01}
      },
      {
        "name": "height",
        "update": "trellisExtent[1]"
      }
    ],
  
    "data": [
      {
      "name": "tuples",
      "url": "https://raw.githubusercontent.com/bharagvrathod/fit3179_asgn2/master/data/top_50_youtubers.csv",
      "format": {"type": "csv", "parse": {"subscribers": "number"}}
      },
      {
        "name": "trellis",
        "source": "tuples",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["category"]
          },
          {
            "type": "formula", "as": "span",
            "expr": "rangeStep * bandspace(datum.count, innerPadding, outerPadding)"
          },
          {
            "type": "stack",
            "field": "span"
          },
          {
            "type": "extent",
            "field": "y1",
            "signal": "trellisExtent"
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "xscale",
        "domain": {"data": "tuples", "field": "subscribers"},
        "nice": true,
        "zero": true,
        "round": true,
        "range": "width"
      },
      {
        "name": "color",
        "type": "ordinal",
        "range": "category",
        "domain": {"data": "trellis", "field": "category"}
        
      }
    ],
  
    "axes": [
      { "orient": "bottom", "scale": "xscale", "domain": true }
    ],
  
    "marks": [
      {
        "type": "group",
  
        "from": {
          "data": "trellis",
          "facet": {
            "name": "faceted_tuples",
            "data": "tuples",
            "groupby": "category"
          }
        },
  
        "encode": {
          "enter": {
            "x": {"value": 0},
            "width": {"signal": "width"}
          },
          "update": {
            "y": {"field": "y0"},
            "y2": {"field": "y1"}
          }
        },
  
        "scales": [
          {
            "name": "yscale",
            "type": "band",
            "paddingInner": {"signal": "innerPadding"},
            "paddingOuter": {"signal": "outerPadding"},
            "round": true,
            "domain": {"data": "faceted_tuples", "field": "Youtuber"},
            "range": {"step": {"signal": "rangeStep"}}
          }
        ],
  
        "axes": [
          { "orient": "left", "scale": "yscale",
            "ticks": false, "domain": false, "labelPadding": 4 }
        ],
  
        "marks": [
          {
            "type": "rect",
            "from": {"data": "faceted_tuples"},
            "encode": {
              "enter": {
                "x": {"value": 0},
                "x2": {"scale": "xscale", "field": "subscribers"},
                "fill": {"scale": "color", "field": "category"},
                "strokeWidth": {"value": 2}
              },
              "update": {
                "y": {"scale": "yscale", "field": "Youtuber"},
                "height": {"scale": "yscale", "band": 1},
                "stroke": {"value": null},
                "zindex": {"value": 0}
              },
              "hover": {
                "stroke": {"value": "firebrick"},
                "zindex": {"value": 1}
              }
            }
          },
          {
            "type": "text",
            "from": { "data": "faceted_tuples" },
            "encode": {
              "update": {
                "x": {
                  "scale": "xscale",
                  "field": "subscribers",
                  "band": 0.5
                },
                "y": {
                  "scale": "yscale",
                  "field": "Youtuber",
                  "band": 0.5
                },
                "text": { "field": "subscribers" },
                "align": { "value": "right" },
                "fontWeight": {"value": "bold"},
                "baseline": { "value": "middle" },
                "fill": { "value": "white" }
              }
            }
          }
        ]
      }
    ], "legends": [
        {
          "fill": "color",
          "title": "Subscribers",
          "orient": "right",
          "labelFontSize": 14,
          "symbolSize": 150,
          "titleFontSize": 15,
          "encode": {
            "symbols": {"enter": {"fillOpacity": {"value": 4}}},
            "labels": {"update": {"text": {"field": "value"}}}
          }
        }
      ]
  }
  